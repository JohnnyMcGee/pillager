rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if false;
    }
    match /raids/{raidId} {
      allow read, delete: if request.auth.uid != null;
      allow write: if request.auth.uid != null;
    }
    match /vikings/{vikingId} {
      allow read:  if request.auth.uid != null;
      allow write, delete: if request.auth.uid == vikingId;
    }
    match /comments/{commentsId} {
      allow read: if request.auth.uid != null;
      allow create: if request.auth.uid != null 
      && request.auth.uid == request.resource.data.sender;
      allow update, delete: if request.auth.uid != null 
      && request.auth.uid == request.resource.data.sender
      && request.auth.uid == resource.data.sender;
    }
  }
}